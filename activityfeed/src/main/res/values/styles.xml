        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="SpinnerWithNoArrow" parent="@android:style/Widget.Spinner">
        <item name="android:background">@drawable/empty</item>
    </style>

    <style name="DividerTextViewStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/header_item_padding</item>
        <item name="android:paddingBottom">@dimen/header_item_padding</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/grey_text_color</item>
        <item name="android:fontFamily">@string/roboto_medium</item>
    </style>

	<style name="PaymentFinalItemTextStyle">
		<item name="android:textColor">@android:color/black</item>
		<item name="android:fontFamily">@string/roboto_medium</item>
		<item name="android:textSize">16dp</item>
	</style>

    <style name="PurchaseFlowEmailTextStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@string/roboto_light</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Theme.Bandsintown.DialogActivity" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <string name="accessibility_overflow" translatable="false">overflow</string>

    <style name="PurchaseReceiptListItemTextStyle" parent="Widget.Bandsintown.TextAppearance">
