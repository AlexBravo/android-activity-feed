<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BandsintownBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/actionbar_body_color</item>
        <!-- Color for status bar (a bit darker than action bar color -->
        <item name="colorPrimaryDark">@color/status_bar_dark_bit_green</item> <!--TODO alt: status_bar_dark_bit_green-->
        <!-- Color for UI fields like checkboxes and buttons -->
        <item name="colorAccent">@color/big_green_ui_element_shader</item>
        <!-- Trim color for UI elements like checkboxes -->
        <item name="android:textColorSecondary">@color/grey</item>

        <item name="windowActionBar">false</item>

        <item name="android:textAppearance">@style/Widget.Bandsintown.TextAppearance</item>

        <item name="@attr/cardViewStyle">@style/CardViewAppearance</item>

        <item name="windowActionModeOverlay">true</item>

        <item name="actionModeStyle">@style/ActionModeTheme</item>

        <item name="actionOverflowButtonStyle">@style/Widget.ActionButton.Overflow</item>
    </style>

    <style name="Widget.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:contentDescription">@string/accessibility_overflow</item>
    </style>

    <style name="Theme.Bandsintown.TabActivity" parent="BandsintownBaseTheme">
        <!-- FIXME this is stupid but we need it in order for the tabs to work because you cant explicitly set tab colors -->
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="Theme.Bandsintown" parent="BandsintownBaseTheme">
        <!-- Transition settings -->
    </style>

    <style name="Theme.Bandsintown.Login" parent="BandsintownBaseTheme">

    </style>

    <style name="Theme.Facebook.Login" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:progressBarStyle">@style/Widget.AppCompat.ProgressBar</item>
    </style>

    <style name="HeaderDivider">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/header_item_padding</item>
        <item name="android:paddingBottom">@dimen/header_item_padding</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="ArtistEventsHeaderDivider">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/header_item_padding</item>
        <item name="android:paddingBottom">@dimen/header_item_padding</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="ListItem">
        <item name="android:background">@drawable/clickable_listitem</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/list_item_padding</item>
        <item name="android:elevation" tools:ignore="NewApi">@dimen/list_item_elevation</item>
    </style>

    <style name="ListItem.NoPadding">
        <item name="android:background">@drawable/clickable_listitem</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation" tools:ignore="NewApi">@dimen/list_item_elevation</item>
    </style>

    <style name="ListItemNoPaddingNoElevation">
        <item name="android:background">@drawable/clickable_listitem</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation" tools:ignore="NewApi">@dimen/list_item_elevation</item>
    </style>

    <style name="WidgetListItem">
        <!--<item name="android:background">@drawable/selectable_list_item_drawable</item>-->
        <item name="android:background">@drawable/clickable_list_item_no_border</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/list_item_padding</item>
        <item name="android:elevation" tools:ignore="NewApi">1dp</item>
    </style>

    <style name="BigListHeader">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:elevation" tools:ignore="NewApi">4dp</item>
    </style>

    <style name="Widget.Bandsintown.Drawer" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:background">@color/drawer_background_color</item> <!-- TODO maybe use a different but similar color -->
        <item name="android:elevation" tools:ignore="NewApi">4dp</item>
        <item name="android:colorActivatedHighlight">@color/bit_button_pressed</item>
    </style>

    <style name="BandsintownSlidingPaneDrawer">
        <item name="android:background">@color/drawer_background_color</item> <!-- TODO maybe use a different but similar color -->
        <!--<item name="android:elevation" tools:ignore="NewApi">4dp</item>-->
    </style>

    <style name="Widget.Bandsintown.ToolbarTitleTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.Bandsintown.ToolbarTitleTextAppearance.Expanded">
        <item name="android:textSize">@dimen/toolbar_title_expanded_text_size</item>
        <item name="android:shadowColor">@color/text_shadow_color</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="Widget.Bandsintown.ToolbarTitleTextAppearanceBottomMargin" parent="@android:style/TextAppearance">
