<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<com.bandsintown.activityfeed.FeedItemViewHeader
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>

	<TextView
		android:id="@+id/fiigs_message"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="12dp"
		android:visibility="gone"/>

	<android.support.percent.PercentRelativeLayout
		android:id="@+id/fiigs_body_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		
		<android.support.percent.PercentRelativeLayout
			android:layout_width="0dp"
			android:layout_height="0dp"
			app:layout_aspectRatio="@fraction/group_image_post_ratio"
			app:layout_widthPercent="100%">

			<ImageView
				android:id="@+id/one"
				android:layout_width="0dp"
				android:layout_height="0dp"
				app:layout_widthPercent="@fraction/one_by_three"
				app:layout_heightPercent="@fraction/one_by_two"
				android:padding="1dp"
				android:layout_margin="0dp"/>

			<ImageView
				android:id="@+id/two"
				android:layout_width="0dp"
				android:layout_height="0dp"
				app:layout_widthPercent="@fraction/one_by_three"
				app:layout_heightPercent="@fraction/one_by_two"
				android:padding="1dp"
				android:layout_toRightOf="@id/one"
				android:layout_margin="0dp"/>

			<ImageView
				android:id="@+id/three"
				android:layout_width="0dp"
				android:layout_height="0dp"
				app:layout_widthPercent="@fraction/one_by_three"
				app:layout_heightPercent="@fraction/one_by_two"
				android:padding="1dp"
				android:layout_toRightOf="@id/two"
				android:layout_margin="0dp"/>

			<ImageView
				android:id="@+id/four"
				android:layout_width="0dp"
				android:layout_height="0dp"
				app:layout_widthPercent="@fraction/one_by_three"
				app:layout_heightPercent="@fraction/one_by_two"
				android:padding="1dp"
				android:layout_below="@id/one"
				android:layout_margin="0dp"/>

			<ImageView
				android:id="@+id/five"
				android:layout_width="0dp"
				android:layout_height="0dp"
				app:layout_widthPercent="@fraction/one_by_three"
				app:layout_heightPercent="@fraction/one_by_two"
				android:padding="1dp"
				android:layout_below="@id/one"
				android:layout_toRightOf="@id/four"
				android:layout_margin="0dp"/>

			<ImageView
				android:id="@+id/six"
				android:layout_width="0dp"
				android:layout_height="0dp"
				app:layout_widthPercent="@fraction/one_by_three"
				app:layout_heightPercent="@fraction/one_by_two"
				android:padding="1dp"
				android:layout_below="@id/one"
				android:layout_toRightOf="@id/five"
				android:layout_margin="0dp"/>
			
			<include
				layout="@layout/widget_more_image_group"
				android:layout_width="0dp"
				android:layout_height="0dp"
				app:layout_widthPercent="@fraction/one_by_three"
				app:layout_heightPercent="@fraction/one_by_two"
				android:layout_below="@id/one"
				android:layout_toRightOf="@id/five"
				android:layout_margin="0dp"/>

		</android.support.percent.PercentRelativeLayout>

	</android.support.percent.PercentRelativeLayout>

	<com.bandsintown.activityfeed.FeedItemGroupFooterView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>

</LinearLayout>