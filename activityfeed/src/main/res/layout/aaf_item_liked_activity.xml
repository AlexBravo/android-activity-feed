<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<com.bandsintown.activityfeed.view.FeedItemViewHeader
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>

		<FrameLayout
			android:id="@+id/fila_liked_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="4dp"
			android:padding="4dp"
			android:background="@drawable/liked_activity_inner_border"/>

		<com.bandsintown.activityfeed.view.FeedItemSingleFooterView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>

	</LinearLayout>

</merge>