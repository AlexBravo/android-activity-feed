<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Bandsintown" parent="BandsintownBaseTheme">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="Theme.Bandsintown.StatusBarInApp">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Bandsintown.Login" parent="BandsintownBaseTheme">
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Theme.Facebook.Login" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:progressBarStyle">@style/Widget.AppCompat.ProgressBar</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

</resources>